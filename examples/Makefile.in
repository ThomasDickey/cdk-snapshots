#
# Makefile for the examples directory.
#
SHELL		= /bin/sh

CC		= @CC@

LIBS		= -lcdk @LIBS@
LIBDIR		= -L.. @LDFLAGS@

CFLAGS		= @CFLAGS@ @EXTRA_CFLAGS@
CPPFLAGS	= @DEFS@ @CPPFLAGS@ -I.. -I../include

BINS	= alphalist_ex bind_ex buttonbox_ex calendar_ex cdkscreen_ex dialog_ex \
		entry_ex fselect_ex graph_ex hello_ex histogram_ex \
		itemlist_ex label_ex marquee_ex matrix_ex mentry_ex \
		menu_ex position_ex preprocess_ex radio_ex scale_ex \
		scroll_ex selection_ex slider_ex subwindow_ex \
		swindow_ex template_ex viewer_ex vinstall

LINKIT	= @ECHO_LD@$(CC) $(CFLAGS) $(CPPFLAGS) $? -o $@ $(LIBDIR) $(LIBS)

all : $(BINS)

alphalist_ex:	alphalist_ex.c	; $(LINKIT)
bind_ex:	bind_ex.c	; $(LINKIT)
buttonbox_ex:	buttonbox_ex.c	; $(LINKIT)
calendar_ex:	calendar_ex.c	; $(LINKIT)
cdkscreen_ex:	cdkscreen_ex.c	; $(LINKIT)
dialog_ex:	dialog_ex.c	; $(LINKIT)
entry_ex:	entry_ex.c	; $(LINKIT)
fselect_ex:	fselect_ex.c	; $(LINKIT)
graph_ex:	graph_ex.c	; $(LINKIT)
hello_ex:	hello_ex.c	; $(LINKIT)
histogram_ex:	histogram_ex.c	; $(LINKIT)
itemlist_ex:	itemlist_ex.c	; $(LINKIT)
label_ex:	label_ex.c	; $(LINKIT)
marquee_ex:	marquee_ex.c	; $(LINKIT)
matrix_ex:	matrix_ex.c	; $(LINKIT)
mentry_ex:	mentry_ex.c	; $(LINKIT)
menu_ex:	menu_ex.c	; $(LINKIT)
position_ex:	position_ex.c	; $(LINKIT)
preprocess_ex:	preprocess_ex.c	; $(LINKIT)
radio_ex:	radio_ex.c	; $(LINKIT)
scale_ex:	scale_ex.c	; $(LINKIT)
scroll_ex:	scroll_ex.c	; $(LINKIT)
selection_ex:	selection_ex.c	; $(LINKIT)
slider_ex:	slider_ex.c	; $(LINKIT)
subwindow_ex:	subwindow_ex.c	; $(LINKIT)
swindow_ex:	swindow_ex.c	; $(LINKIT)
template_ex:	template_ex.c	; $(LINKIT)
viewer_ex:	viewer_ex.c	; $(LINKIT)
vinstall:	vinstall.c	; $(LINKIT)
#
# Standard clean directives.
#
clean::
	$(RM) core *.o $(BINS)
distclean:: clean
	$(RM) Makefile
